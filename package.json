{
  "name": "node_express_ts",
  "version": "1.0.0",
  "main": "app.ts",
  "author": "Doan Tan Ty",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --exit-child src/app.ts",
    "typeorm": "typeorm-ts-node-commonjs",
    "migrate": "rm -rf build && yarn build && yarn typeorm migration:generate -d ./src/utils/app-data-source.ts ",
    "db:push": "rm -rf build && yarn build && yarn typeorm migration:run -d src/utils/app-data-source.ts",
    "lint": "eslint --ignore-path .eslintignore \"src/**/*.ts\" --fix",
    "lint:check": "eslint --ignore-path .eslintignore \"src/**/*.ts\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "config": "^3.3.9",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.2",
    "pg": "^8.10.0",
    "redis": "^4.6.6",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.16",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/config": "^3.3.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/module-alias": "^2.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.1.1",
    "@types/nodemailer": "^6.4.7",
    "@types/redis": "^4.0.11",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  },
  "_moduleAliases": {
    "@": "./src"
  }
}
